<application>
  <component name="KeyPromoterXStatistic">
    <option name="statistics">
      <Statistic Action="Edit Templates of Current Language">
        <Item>
          <IdeaActionID>Cpt.OpenTemplates</IdeaActionID>
          <ShortCut>'Alt+Shift+P'</ShortCut>
          <Description>Edit Templates of Current Language</Description>
          <Count>2</Count>
        </Item>
      </Statistic>
      <Statistic Action="Hide All Windows">
        <Item>
          <IdeaActionID>HideAllWindows</IdeaActionID>
          <ShortCut>'Ctrl+Shift+F12'</ShortCut>
          <Description>Hide All Windows</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Maximize Tool Window">
        <Item>
          <IdeaActionID>MaximizeToolWindow</IdeaActionID>
          <ShortCut>'Ctrl+Shift+Quote'</ShortCut>
          <Description>Maximize Tool Window</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Mute Breakpoints">
        <Item>
          <IdeaActionID>XDebugger.MuteBreakpoints</IdeaActionID>
          <ShortCut>'Ctrl+Alt+Shift+M'</ShortCut>
          <Description>Mute Breakpoints</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Refresh all Gradle projects">
        <Item>
          <IdeaActionID>ExternalSystem.RefreshAllProjects</IdeaActionID>
          <ShortCut>'Ctrl+Alt+Shift+G'</ShortCut>
          <Description>Refresh all Gradle projects</Description>
          <Count>4</Count>
        </Item>
      </Statistic>
      <Statistic Action="Rerun 'Application'">
        <Item>
          <IdeaActionID>Rerun</IdeaActionID>
          <ShortCut>'Ctrl+F5'</ShortCut>
          <Description>Rerun 'Application'</Description>
          <Count>7</Count>
        </Item>
      </Statistic>
      <Statistic Action="Restore Windows">
        <Item>
          <IdeaActionID>HideAllWindows</IdeaActionID>
          <ShortCut>'Ctrl+Shift+F12'</ShortCut>
          <Description>Restore Windows</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Settings...">
        <Item>
          <IdeaActionID>ShowSettings</IdeaActionID>
          <ShortCut>'Ctrl+Alt+S'</ShortCut>
          <Description>Settings...</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Stop 'Application'">
        <Item>
          <IdeaActionID>Stop</IdeaActionID>
          <ShortCut>'Ctrl+F2'</ShortCut>
          <Description>Stop 'Application'</Description>
          <Count>4</Count>
        </Item>
      </Statistic>
      <Statistic Action="Toggle Line Breakpoint">
        <Item>
          <IdeaActionID>ToggleLineBreakpoint</IdeaActionID>
          <ShortCut>'Ctrl+F8'</ShortCut>
          <Description>Toggle Line Breakpoint</Description>
          <Count>24</Count>
        </Item>
      </Statistic>
    </option>
    <option name="suppressed">
      <Statistic Action="GoTo">
        <Item>
          <IdeaActionID>GotoDeclaration</IdeaActionID>
          <ShortCut>'Ctrl+B' or 'Ctrl+Button1 Click'</ShortCut>
          <Description>GoTo</Description>
          <Count>2</Count>
        </Item>
      </Statistic>
    </option>
  </component>
</application>